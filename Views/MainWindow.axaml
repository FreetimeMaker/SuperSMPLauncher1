<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SuperSMPLauncher.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SuperSMP Launcher"
        Width="1920" Height="1080"
        WindowStartupLocation="CenterScreen">
    
    <Window.Background>
        <ImageBrush Source="avares://SuperSMPLauncher/Assets/background.jpg"
                    Stretch="UniformToFill" />
    </Window.Background>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Titel -->
        <TextBlock Grid.Row="0" 
                   Text="SuperSMP Launcher" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="White" />

        <StackPanel Grid.Row="1" Spacing="5" Margin="0,0,0,15">
            <TextBlock Text="Lunar Client Features:"
            FontSize="16"
            Foreground="White" />

            <ComboBox x:Name="LCFComboBox"
                      Width="250"
                      Background="#404040"
                      Foreground="White"
                      BorderBrush="#606060">
                <ComboBoxItem>With Lunar Client Features</ComboBoxItem>
                <ComboBoxItem>Without Lunar Client Features</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        
        <!-- Shader Auswahl -->
        <StackPanel Grid.Row="2" Spacing="5" Margin="0,0,0,15">
            <TextBlock Text="Shader-Version:" 
                       FontSize="16" 
                       Foreground="White" />
            
            <ComboBox x:Name="ShaderComboBox"
                      Width="250"
                      Background="#404040"
                      Foreground="White"
                      BorderBrush="#606060">
                <ComboBoxItem>Mit Shadern</ComboBoxItem>
                <ComboBoxItem>Ohne Shader</ComboBoxItem>
            </ComboBox>
            
            <TextBlock Text="'ns' im Versionsnamen = Ohne Shader, sonst Mit Shadern" 
                       FontSize="12" 
                       Foreground="#AAAAAA"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap" />
        </StackPanel>
        
        <!-- ModLoader Auswahl -->
        <StackPanel Grid.Row="3" Spacing="5" Margin="0,0,0,15">
            <TextBlock Text="ModLoader:" 
                       FontSize="16" 
                       Foreground="White" />
            
            <ComboBox x:Name="ModloaderComboBox"
                      Width="250"
                      Background="#404040"
                      Foreground="White"
                      BorderBrush="#606060">
                <ComboBoxItem>Fabric</ComboBoxItem>
                <ComboBoxItem>Forge</ComboBoxItem>
                <ComboBoxItem>NeoForge</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        
        <!-- Minecraft Version Dropdown -->
        <StackPanel Grid.Row="4" Spacing="5" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Minecraft Version:" 
                           FontSize="16" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" />
            </Grid>
            
            <!-- Minecraft Version Dropdown -->
            <ComboBox x:Name="MinecraftVersionComboBox"
                      Width="250"
                      Background="#404040"
                      Foreground="White"
                      BorderBrush="#606060"
                      IsEnabled="True">
                <ComboBoxItem>(Neueste Version)</ComboBoxItem>
                <!-- Hier werden die Versionen dynamisch eingefÃ¼gt -->
            </ComboBox>
            
            <!-- Lade-Indikator -->
            <StackPanel x:Name="LoadingPanel"
                        Orientation="Horizontal"
                        Spacing="5"
                        Margin="0,5,0,0"
                        IsVisible="False">
                <TextBlock Text="â³" FontSize="12" Foreground="Yellow" />
                <TextBlock Text="Lade verfÃ¼gbare Versionen..." 
                           FontSize="12"
                           Foreground="#AAAAAA" />
            </StackPanel>
        </StackPanel>
        
        <!-- Status-Anzeige -->
        <Border Grid.Row="5"
                Background="#40000000" 
                BorderBrush="#606060" 
                BorderThickness="1" 
                CornerRadius="5"
                Margin="0,0,0,20"
                Padding="12">
            <TextBlock x:Name="StatusText" 
                       Text="Bereit zum Download" 
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontSize="14" />
        </Border>
        
        <!-- Lade-Indikatoren -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <StackPanel x:Name="LoadingVersionsPanel"
                        Orientation="Horizontal" Spacing="5"
                        IsVisible="False">
                <TextBlock Text="â³" FontSize="14" Foreground="Yellow" />
                <TextBlock Text="Lade verfÃ¼gbare Versionen..." 
                           Foreground="White" 
                           VerticalAlignment="Center" />
            </StackPanel>
            
            <StackPanel x:Name="DownloadingPanel"
                        Orientation="Horizontal" Spacing="5"
                        IsVisible="False">
                <TextBlock Text="â³" FontSize="14" Foreground="Yellow" />
                <TextBlock Text="Lade Modpack herunter..." 
                           Foreground="White" 
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
        
        <!-- Download Button -->
        <Button Grid.Row="7"
                x:Name="DownloadButton"
                Content="ðŸ“¥ Modpack herunterladen"
                Width="280" Height="50"
                FontSize="16"
                HorizontalAlignment="Center"
                Background="#2E7D32"
                BorderBrush="#1B5E20"
                Foreground="White"
                CornerRadius="5"
                Margin="0,0,0,20">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Cursor" Value="Hand" />
                </Style>
            </Button.Styles>
        </Button>
        
        <!-- Minecraft Starten Button -->
        <Button Grid.Row="8"
                x:Name="StartMinecraftButton"
                Content="ðŸš€ Minecraft Starten"
                Width="280" Height="50"
                FontSize="16"
                HorizontalAlignment="Center"
                Background="#1565C0"
                BorderBrush="#0D47A1"
                Foreground="White"
                CornerRadius="5"
                Margin="0,0,0,20"
                IsEnabled="False">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Cursor" Value="Hand" />
                </Style>
            </Button.Styles>
        </Button>
        
        <!-- Info-Bereich -->
        <Border Grid.Row="9"
                Background="#30000000" 
                CornerRadius="5"
                Padding="15">
            <StackPanel Spacing="8">
                <TextBlock Text="â„¹ï¸ Informationen" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="White" />
                
                <TextBlock Text="â€¢ Mit Shadern: Standard-Version mit Shader-Pack" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ Ohne Shader: Version mit 'ns' im Namen (z.B. '1.8.0-ns')" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ WÃ¤hle Lunar Client Features (LC im Namen = mit Features)" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ WÃ¤hle Fabric, Forge oder NeoForge als ModLoader" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ WÃ¤hle eine Minecraft-Version aus der Liste" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ Nach dem Download: Klicke auf 'Minecraft Starten'" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ Verbindet automatisch mit SuperSMP Server: supersmp.fun" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
                <TextBlock Text="â€¢ Download wird im Ordner 'instance' installiert" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</Window>